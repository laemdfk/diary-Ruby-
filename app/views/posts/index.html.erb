<h1><%= @user.name %>の投稿一覧</h1>
<% @posts.each do |post| %>
 <%= link_to post.title,post_path(post.id) %>
 <%= post.body %>
 <% if post.image.attached? %>
  <%= image_tag post.image, size: "300x300" %>
<% end %>
 <%#= post.created_at %>    <!--このコードだとUTC表示になるので、下記に変更-->
 <%= post.created_at.strftime('%Y/%m/%d %H:%M') %>
<% end %>