<h1>Posts#show</h1>
<%= @post.title %>
<%= @post.body %>
<% if @post.image.attached? %>
  <%= image_tag @post.image, size: "300x300" %>
<% else %>
  <%= image_tag 'no_image.jpg', size: "300x300" %>
<% end %>

<%= @post.created_at.strftime('%Y/%m/%d %H:%M') %>

<%= link_to "edit",edit_post_path(@post) %>
<%= link_to "destroy",post_path,method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>

<%= link_to "back",posts_path %>
